<scroll-view scroll-y class='graybg'>
  <view class='w_700 auto'>
    <view class='whitebg radius_10 pad_l30 pad_r30 pad_t40'>
      <view class='flex_c_c'>
        <image class='w_270 h_250' src='../../image/logioImg.png' />
      </view>
      <view class='flex_c_s bor_bot pad_t40 pad_b20'>
        <text class='font_32 color_14 bold'>账号</text>
        <input placeholder='请输入账号' placeholder-class='pleasorder' class='flex_1 color_0 font_32 left_30 '/>
