/* 弹窗 */


/* 蒙层 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
/* 模态框 */
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 123rpx;
  left: 100rpx;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
}

/* 标题 */
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
  font-weight: bold;
}

/* 中间内容 */
.modal-content {
  padding: 50rpx 32rpx;

}

.modal-text{
  color: #000000;
  font-size: 28rpx;
  text-align: center;
  margin-top: 19rpx;
}

/* 输入框盒子 */
.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  font-size: 28rpx;
}

/* 输入框 */
.input {
  width: 100%;
  height: 48rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

/* 输入框默认字 */
input-holder {
  color: #666;
  font-size: 28rpx;
}

/* 模态框底部 */
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 90rpx;
  border-top: 1px solid #dedede;
  font-size: 36rpx;
  line-height: 90rpx;
}

/* 取消按钮 */
.btn-cancel {
  width: 50%;
  color: #146aa8;
  text-align: center;
  border-right: 1px solid #dedede;
}

/* 确定按钮 */
.btn-confirm {
  width: 50%;
  color: #146aa8;
  text-align: center;
}

/* 操作列表 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff; 
}
.optionlist{
  width: 700rpx;
  margin: 0 auto;
  margin-top: 460rpx;
}
.option{
  padding:30rpx;
  display: flex;
  justify-content:center;
  align-items:center;
  background: #fff;
  font-size: 32rpx;
  color:#136aa8;
  border-radius: 10rpx;
  border-bottom:1rpx solid #3e4f5c;
}