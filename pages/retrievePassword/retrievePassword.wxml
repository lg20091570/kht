<!--pages/retrievePassword/retrievePassword.wxml-->
<scroll-view scroll-y class='graybg'>
  <view class='w_700 auto'>
    <view class='whitebg top_20 radius_10 pad_l30 pad_r30'>
      <view class='flex_c_s bor_bot pad_t20 pad_b20'>
        <text class='font_32 color_14 bold'>手机号</text>
        <input placeholder='请输入手机号' maxlength='11' placeholder-class='pleasorder' class='flex_1 color_0 font_32 left_30 '/>
      </view>
      <view class='flex_c_s bor_bot pad_t20 pad_b20'>
        <text class='font_32 color_14 bold'>验证码</text>
        <input placeholder='请输入验证码' placeholder-class='pleasorder' class='flex_1 color_0 font_32 left_30 '/>
        <view class='btnBg radius_10 pad_l30 pad_r30 pad_t10 pad_b10 font_28 white'>获取验证码</view>
      </view>
      <view class='flex_c_s bor_bot pad_t20 pad_b20'>
        <text class='font_32 color_14 bold'>设置密码</text>
        <input placeholder='请输入密码' placeholder-class='pleasorder' class='flex_1 color_0 font_32 left_30 '/>
      </view>
    </view>
  </view>
   <view class='w_700 radius_10 whitebg positionBox font_32 color_14 bold pad_t20 pad_b20 center'>确定</view>
</scroll-view>
